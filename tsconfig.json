{
    "compilerOptions": {
        "module": "commonjs",
        "preserveConstEnums": true,
        "allowUnreachableCode": true,
        "declaration": true,
        "outDir": "lib",
        "removeComments": false,
        "strict": true,
        "strictNullChecks": false,
        "target": "es6",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "test"
    ]
}
